//
// Function uses a loop to compute factorial.
//

#include "oclib.oh"

int fac (int n) {
   int f = 1;
   while (n > 1) {
      f = f * n;
      n = n - 1;
   }
   return f;
}

int main() {
   int n = 1;
   while (n <= 5) {
      putint (fac (n));
      putchar ('\n');
      n = n + 1;
   }
}

